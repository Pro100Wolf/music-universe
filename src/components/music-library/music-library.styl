.music-library
  position absolute
  top 0
  left 0
  width 0
  height 0
  background-color rgba(0, 0, 0, .55)
  opacity 0
  z-index 100

  &--visible
    width 100%
    height 100%
    opacity 1
    transition 0.5s opacity ease-in-out

  &__content
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    display flex
    width 100%
    height 350px

  &__slider
    position relative
    width 100%
    height 100%
    margin auto
    overflow hidden

  &__item
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width auto
    height 350px
    opacity 0
    transition 0.25s all ease-in-out

    &--active
      left 50%
      transform translate(-50%, -50%)
      opacity 1
      z-index 2

    &--active:hover &__play-btn
      transform scale(1)
      opacity 1

    &--prev, &--next
      transform translate(-50%, -50%) scale(0.9)
      filter: blur(2px);
      opacity 1
      z-index 1
      cursor pointer

    &--prev
      left 30%

    &--next
      left 70%

    &__play-btn
      position absolute
      top 105px
      left 211px
      width 127px
      height 88px
      background-color rgba(0, 0, 0, .35)
      border none
      opacity 0
      transform scale(0)
      transition 0.25s opacity ease-in-out
      cursor pointer

      &:before, &:after
        content ''
        position absolute
        top 50%
        left 50%
        width 0
        height 0
        display block

      &:before
        transform translate(-10px, -50%)
        border 25px solid transparent
        border-left 35px solid #fff
        z-index 2

      &:after
        transform translate(-14px, -50%)
        border 33px solid transparent
        border-left 45px solid #000
        z-index 1


.cassette
  width 550px
  height 350px
  user-select none

  &__title, &__artist
    font-family 'Rock Salt', cursive
    font-size 12px
    user-select text